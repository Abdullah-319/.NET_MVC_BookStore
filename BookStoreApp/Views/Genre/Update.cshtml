@model BookStoreApp.Models.Domain.Genre

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Update Genre</h3>
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name">Name *</label>
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger fw-bolder"></span>
                </div>
                    
                @if(TempData["msg"]!=null)
                {
                    <div class="form-group text-success fw-bolder">
                        @TempData["msg"]
                    </div>
                }

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-pen"></i> Update</button>
                    <a href="/Genre/GetAll" class="btn btn-primary"><i class="bi bi-list"></i> List</a>
                </div>
            </form>
        </div>
    </div>
</div>

