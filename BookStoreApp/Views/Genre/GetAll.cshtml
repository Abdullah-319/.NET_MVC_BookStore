@model IEnumerable<BookStoreApp.Models.Domain.Genre>

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Genre List</h3>
            
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-success" href="/Genre/Update?id=@item.Id"><i class="bi bi-pen"></i></a> |
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Genre/Delete?id=@item.Id"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                    
                </tbody>

            </table>

            <div class="row">
                <div class="col-md-6">
                    <a class="btn btn-dark" href="/Genre/Add">+ Add more</a>
                </div>
            </div>
    </div>
</div>

